<h1>Register</h1>

<div>
	<% if flash[:status] == TRUE %>
		<p><%= flash[:alert] %></p>
		<% elsif flash[:status] == FALSE %>
		<% flash[:alert].each do |error| %>
			<p><%= error %></p>
		<%end%>
	<%end%>				
</div>

<%= form_for @user do |user|%>
<div id='para1'>
	<%= user.label(:name, "Full Name ") %>
	<%= user.text_field :name %>
</div>
<div id='para1'>
	<%= user.label(:password, "Password ") %>
	<%= user.password_field :password %>
</div>
<div id='para1'>
	<%= user.label(:password_confirmation, "Password Confirmation ") %>
	<%= user.password_field :password_confirmation %>
</div>
<div>
	<%= submit_tag "Register" %>
</div>
<% end %>

<%= button_to 'Login', login_path %>
